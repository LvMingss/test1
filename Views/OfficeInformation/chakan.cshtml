@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="panel panel-default">
            <table class="table table-bordered dl-horizontal">
                <tr>
                    <td style="background-color:#f9f9f9;width:10%;">
                        标题
                    </td>
                    <td>
                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control jubu", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td style="background-color:#f9f9f9;width:10%;">
                        作者
                    </td>
                    <td>
                        @Html.EditorFor(model => model.author, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.author, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td style="background-color:#f9f9f9;width:10%;">
                        发布日期
                    </td>
                    <td>
                        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td style="background-color:#f9f9f9;width:10%;">
                        内容
                    </td>
                    <td>
                        @Html.EditorFor(model => model.content, new { htmlAttributes = new { @class = "form-control jubu", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td style="background-color:#f9f9f9;width:10%;">
                        类别
                    </td>
                    <td>
                        @Html.DropDownList("subCategoryID", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.subCategoryID, "", new { @class = "text-danger" })
                    </td>
                </tr>
                @*<tr>
                    <td style="background-color:#f9f9f9;width:10%;">
                        文件上传
                    </td>
                    <td>
                        <input name="MyUploadile" id="MyUploadile" value="@ViewBag.name"type="file" onchange="OK()" readonly = "readonly"/>
                        <input name="name" id="name" type="text" value="@ViewBag.name" style="display:none">
                    </td>
                </tr>*@
            </table>

        </div>
        <div style="text-align:center;">
            <p>
                <input type="submit" value="返回" class="btn btn-default" /> 
              
            </p>
            <div style="height:5px;">
            </div>
        </div>
    </div>
}

