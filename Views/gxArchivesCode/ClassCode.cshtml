<script type="text/javascript">
    function del() {
        var msg = "确认要删除吗?";
        if (confirm(msg) == true) {
            return true;
        } else {
            return false;
        }
    }                             //删除确认对话框

    var l = function (value, data, cell, row, options) { //plain text value
        return "<i class='fa fa-edit' style='color:#428bca;vertical-align:middle; padding:2px 0;'></i>"
    };
    var m = function (value, data, cell, row, options) { //plain text value
        return "<i class='glyphicon glyphicon-trash' style='color:#428bca;vertical-align:middle; padding:2px 0;'></i>"
        };


    $().ready(function () {//在页面加载完成之后用，为了保证js能完整的执行。
        $(document).ready(function () {
            var a = $(window).height();
            var hh = a-160;
            $(".box-h").height(hh)  // 高度加在类名为box的DIV 上

        })
            $("#example-table-2").tabulator({
                height:"100%",
                virtualDom:false,
                selectable: true,
                fitColumns:true,
                pagination:"local",
                paginationSize:50,
                columns: [
                {
                    title: "编号", field: "l", width: 50 ,formatter: l,   headerSort: false, align: "center", cellClick: function (e,cell) {
                        var url = '/gxArchivesCode/Coding?id=' + cell.getValue();
                        window.location.href = url;

                    }
                },
                {
                    title: "移除", field: "m", width:50 ,formatter: m,  headerSort: false,  align: "center", cellClick: function (e,cell) {
                        if(del()){
                            var url = '/gxArchivesCode/remove?id=' + cell.getValue();
                            window.location.href = url;
                        }

                    }
                },
                { title: "工程名称", field: "a",  headerSort: false,width: 200 },
                { title: "工程序号", field: "b", headerSort: false, width: 100 },
                { title: "建设单位", field: "c", headerSort: false, width: 200 },
                { title: "施工单位", field: "d", headerSort: false, width: 200 },
                { title: "接收人", field: "e",  headerSort: false,width: 100 },
                { title: "接收日期", field: "f", headerSort: false, width: 100 },
                { title: "整理人", field: "g",  headerSort: false,width: 100 },
                { title: "领取日期", field: "h", headerSort: false, width: 100 },
                { title: "公分明细数", field: "k", headerSort: false,width: 400 },
                { title: "总卷数", field: "i",  headerSort: false,width: 100 },
                { title: "总厚度", field: "j", headerSort: false,width: 100},



                ],
            });

            var temp = new Array();
            var data=@(new HtmlString(@ViewBag.result));
            for (var i = 0; i < data.length;i++) {
                var a = data[i].dateReceived
                date = a
                if(a!=null){
                    var date = a.slice(0,10)
                }
                var b = data[i].lqDate
                date1 = b
                if(b!=null){
                    var date1 = b.slice(0,10)
                }

                temp.push({ "id": i + 1, "a": data[i].projectName,"b": data[i].projectNo, "c": data[i].developmentOrganization, "d": data[i].constructionOrganization,"e": data[i].recipient,"f":date,"g": data[i].collator, "h":date1 , "i":data[i].archivesCount, "j": data[i].originalInchCount,"k": data[i].InchCountDetail,"n": data[i].projectID,"l": data[i].projectID,"m": data[i].projectID});
            }

            $("#example-table-2").tabulator("setData", temp);
            $(window).resize(function () {
                var a = $(window).height();
                var hh = a-160;
                $(".box-h").height(hh)  // 高度加在类名为box的DIV 上
                $("#example-table-2").tabulator("redraw",true);

            });

        });
</script>
<section>
<h2 style="float:left;"><i class="fa fa-tags kongge"></i>进行编号</h2>
<ol class="breadcrumb">
    <li class="active">管线档案</li>
    <li class="active">档案编号</li>
    <li>分类编号</li>
</ol>
<div style="clear:both;"></div>
</section>

