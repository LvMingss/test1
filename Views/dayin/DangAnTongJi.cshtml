
@{
    ViewBag.Title = "各类档案总卷数、总案卷厚度统计";
}
<h2><i class="fa fa-tags"></i>各类档案总卷数、总案卷厚度统计</h2>
<hr />

@section css{
    <link type="text/css" rel="stylesheet" href="~/Scripts/jquery/jquery-ui.css">
}
@section scripts{
    <script type="text/javascript" src="~/Scripts/jquery/jquery-1.8.3.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery/jquery.ui.core.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery/jquery.ui.datepicker.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery/jquery.ui.widget.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery/jquery-ui-timepicker-addon.js"></script>
    @*<script type="text/javascript" src="~/Scripts/jquery/jquery-ui-timepicker-zh-CN.js"></script>*@
    <script>
            $(function () {
                $("#startdata").datepicker({
                    changeMonth: true,
                    changeYear: true
                });
            });
            $(function () {
                $("#enddata").datepicker({
                    changeMonth: true,
                    changeYear: true
                });
            });
    </script>
}
@using (Html.BeginForm())
{
    <div style="font-size:20px;">
        <i class="fa fa-caret-right"></i>请输入日期范围,日期格式：2010-03-12
    </div><br>
    <div class="panel panel-default">
        <table class="table table-bordered dl-horizontal">
            <tr>
                <td style="background-color:#f9f9f9;width:10%;">
                    起始日期:
                </td>
                <td>
                    <input type="text" id="startdata" name="startdata" class="form-control">
                </td>
                <td style="background-color:#f9f9f9;width:10%;">
                    终止日期:
                </td>
                <td>
                    <input type="text" id="enddata" name="enddata" class="form-control">
                </td>
            </tr>
            <tr>
                <td colspan="4" style="text-align:center;">
                    <input type="submit" id="ok" value="生成档案统计表" name="action" class="btn btn-default" />
                    <input type="submit" id="ok" value="生成全部档案统计表" name="action" class="btn btn-default" />
                    <input type="submit" id="cancel" value="取消" name="action" class="btn btn-default" />
                </td>
            </tr>
        </table>
    </div>

