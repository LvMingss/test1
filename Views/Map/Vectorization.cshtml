<script type="text/javascript">
          var table;
          $(function () {
              table = $("#example1").DataTable({
                  dom: 'Bfrtip',
                  buttons: [{
                      text: '坐标添加',
                      action: function (e, dt, node, config) {
                          addProject();
                      }
                  }
                  ],
                  lengthChange: false,
                  //searching: false,
                  processing: true,
                  serverSide: true,
                  ajax: {
                      url: "/Map/GetProjects",
                      type: "POST"
                  },
                  order: [[0, 'asc']],
                  columns: [{
                      data: "GeoID",
                      render: function (data, type, full, meta) {
                          return ' <a class="glyphicon glyphicon-trash" href="javascript:deleteproject(' + data + ')" style="margin-left:10px"></a> <a class="glyphicon glyphicon-edit" href="javascript:editproject(' + data + ')" style="margin-left:10px"></a> <a class="glyphicon glyphicon-map-marker" href="javascript:locationproject(' + data + ')" style="margin-left:10px"></a>';
                      },
                      orderable: false
                  },{
                      data: "paperProjectSeqNo"
                  },{
                      data: "projectName"
                  }],
                  language: {
                      url: "/Scripts/gis/datatables/Chinese.json"
                  }
              });
          });


          var loaddata = function () {
              $.getJSON("/Map/GetProjectGeos?t=" + new Date().getTime(), function (json) {
                  var datas = json.datas;
                  var fs = [];
                  for (var i = 0; i < datas.length; i++) {
                      var data = datas[i];
                      var format = new ol.format.WKT();
                      var feature = format.readFeature(data.ploygon, {
                          dataProjection: 'EPSG:4326',
                          featureProjection: 'EPSG:2385'
                      });
                      feature.setId(data.id);
                      feature.set("name", data.paperProjectSeqNo.toString());
                      fs.push(feature);
                  }
                  source.addFeatures(fs);
              });
          };

          var locationproject = function (id) {
              var marker = source.getFeatureById(id);
              var cords = marker.getGeometry().getFirstCoordinate();
              map.getView().animate({ zoom: 10, center: cords, duration: 500 });
              
          };

          var editproject = function (id) {
              BootstrapDialog.show({
                  type: BootstrapDialog.TYPE_INFO,
                  size: BootstrapDialog.SIZE_WIDE,
                  draggable: true,
                  title: '修改工程空间数据',
                  message: $('<div></div>').load('/Map/EditVectorizationContent'),
                  buttons: [{
                      label: '保存',
                      action: function (dialog) {
                          $.post("/Map/EditVectorization", {
                              id: id,
                              projectid: $("#project").val(),
                              projectname: $("#project").find("option:selected").text(),
                              vrmodel: $("#vrmodel").val()
                          }, function (result) {
                              if (result == "ok") {
                                  alert("修改成功！");
                                  table.draw();
                                  dialog.close();
                                  loaddata();
                              }
                              else {
                                  BootstrapDialog.show({
                                      type: BootstrapDialog.TYPE_WARNING,
                                      title: '修改失败',
                                      message: result
                                  });
                              }
                              table.draw();
                              dialog.close();
                          });
                      }
                  }, {
                      label: '取消',
                      action: function (dialog) {
                          dialog.close();
                      }
                  }]
              });
          };
          var deleteproject = function (id) {
              BootstrapDialog.show({
                  type: BootstrapDialog.TYPE_WARNING,
                  size: BootstrapDialog.SIZE_SMALL,
                  draggable: true,
                  title: "提醒",
                  message: "确定删除该工程坐标吗？",
                  buttons: [{
                      icon: 'glyphicon glyphicon-ok',
                      label: '是',
                      cssClass: 'btn-success',
                      action: function (dialogRef) {
                          dialogRef.close();
                          $.ajax({
                              type: "POST",
                              url: "/Map/DeleteProjectGeo",
                              data: "id=" + id,
                              success: function (msg) {
                                  if (msg == "ok") {
                                      location.reload(true);
                                  } else {
                                      alert("服务器错误：" + msg);
                                  }
                              }
                          });
                      }
                  }, {
                      icon: 'glyphicon glyphicon-remove',
                      label: '否',
                      cssClass: 'btn-remove',
                      action: function (dialogRef) {
                          dialogRef.close();
                      }
                  }, {
                      icon: 'glyphicon glyphicon-repeat',
                      label: '取消',
                      action: function (dialogRef) {
                          dialogRef.close();
                      }
                  }]
              });
          };
          var addProject = function () {
              BootstrapDialog.show({
                  type: BootstrapDialog.TYPE_INFO,
                  size: BootstrapDialog.SIZE_WIDE,
                  draggable: true,
                  title: '添加工程空间数据',
                  message: $('<div></div>').load('/Map/RGVectorizationContent'),
                  buttons: [{
                      label: '保存',
                      action: function (dialog) {
                          var g = 'POLYGON((';
                          var cords = $("div.cord");
                          var x0, y0;
                          for (var i = 0; i < cords.length; i++) {
                              var cord = cords[i];
                              var x = $(cord).find("input.y").val();
                              var y = $(cord).find("input.x").val();
                              if (x == "" || y == "") {
                                  alert("坐标不能为空！");
                                  return;
                              }
                              g += x + " " + y + ",";
                              if (i == 0) {
                                  x0 = x;
                                  y0 = y;
                              }
                          }
                          g += x0 + " " + y0;
                          g += '))';
                         
                          $.post("/Map/SaveVectorization", {
                              geo: (new ol.format.WKT()).writeGeometry((new ol.format.WKT()).readGeometry(g).transform(ol.proj.get('EPSG:2385'), ol.proj.get('EPSG:4326'))),
                              projectid: $("#project").val(),
                              projectname: $("#project").find("option:selected").text(),
                              vrmodel: $("#vrmodel").val()
                          }, function (result) {
                              if (result == "ok") {
                                  alert("添加成功！");
                                  table.draw();
                                  dialog.close();
                                  loaddata();
                              }
                              else {
                                  BootstrapDialog.show({
                                      type: BootstrapDialog.TYPE_WARNING,
                                      title: '添加失败',
                                      message: result
                                  });
                              }
                              table.draw();
                              dialog.close();
                          });
                      }
                  }, {
                      label: '取消',
                      action: function (dialog) {
                          dialog.close();
                      }
                  }]
              });
          };
</script>

