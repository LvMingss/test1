{
<p>
    检索条件:@Html.DropDownList("SelectedID", null, new { @class = "form-control", @style = "display:inline;width:auto;" })  检索内容：@Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @style = "display:inline" })
