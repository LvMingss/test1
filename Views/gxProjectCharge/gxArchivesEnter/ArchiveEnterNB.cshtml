<script type="text/javascript">
    function del() {
        var msg = "确认要归档吗?";
        if (confirm(msg) == true) {
            return true;
        } else {
            return false;
        }
    }                             //删除确认对话框

    var j = function (value, data, cell, row, options) { //plain text value
        return "<i class='fa fa-edit' style='color:#428bca;vertical-align:middle; padding:2px 0;'></i>"
    };
    var k = function (value, data, cell, row, options) { //plain text value
        return "<i class='fa fa-download' style='color:#428bca;;vertical-align:middle; padding:2px 0;'></i>"
        };


    $().ready(function () {//在页面加载完成之后用，为了保证js能完整的执行。
        $(document).ready(function () {
            var a = $(window).height();
            var hh = a-160;
            $(".box-h").height(hh)  // 高度加在类名为box的DIV 上

        })
            $("#example-table-2").tabulator({
                height: "100%",
                colMinWidth:100,
                fitColumns:true,
                sortable: false,
                selectable:true, //make rows selectable
                pagination:"local",
                paginationSize:50,

                columns: [
//{
//                    title: "查看", field: "j", width: 100 ,formatter: j, sorter: "string", align: "center", onClick: function (e, val, cell, row) {
//                        var url = '/gxArchivesEnter/EnterAndSeeNB?id=' + row.n;
//                        window.location.href = url;
//                    }
//                },
                {
                    title: "归档", field: "k", width:100 ,formatter: k, sorter: "string", align: "center", onClick: function (e, val, cell, row) {
                        if(del()){
                            var url = '/gxArchivesEnter/GuiDang?id=' + row.n;
                            window.location.href = url;

                        }

                    }
                },
                { title: "工程名称", field: "a", width: 200 },
                { title: "工程序号", field: "b", width: 100 },
                { title: "工程顺序号", field: "c", width: 100 },
                { title: "盒号", field: "l", width: 100 },
                { title: "项号", field: "m", width: 100 },
                { title: "整理人", field: "d", width: 100 },
                { title: "整理日期", field: "e", width: 100 },
                { title: "设计单位", field: "f", width: 200 },
                { title: "施工单位", field: "g", width: 200 },
                { title: "档号", field: "h", width: 200 },
                { title: "起始排架号", field: "i" },



                ],
            });

            var temp = new Array();
            var data=@(new HtmlString(@ViewBag.result));
            for (var i = 0; i < data.length;i++) {
                var b = data[i].lqDate
                if(b!=null){
                    //var date = new Date(parseInt(b.slice(6)))

                    //result1 = date.getFullYear()+'/'+(parseInt(date.getMonth())+1)+'/'+date.getDate()
                    result1 = b.slice(0,10)
                }
                var h = data[i].startArchiveNo+"—"+data[i].endArchiveNo
                temp.push({ "id": i + 1, "a": data[i].projectName, "b": data[i].projectNo, "m": data[i].Number, "c": data[i].paperProjectSeqNo,"l": data[i].boxNo, "d": data[i].collator,"e":result1,"f":data[i].disignOrganization,"g": data[i].constructionOrganization, "h":h, "i":data[i].startPaijiaNo, "n": data[i].projectID});
            }

            $("#example-table-2").tabulator("setData", temp);
            $(window).resize(function () {
                var a = $(window).height();
                var hh = a-160;
                $(".box-h").height(hh)  // 高度加在类名为box的DIV 上
                $("#example-table-2").tabulator("redraw",true);

            });

        });
</script>
<section>
    <h2 style="float:left;"><i class="fa fa-tags kongge"></i>录入案卷信息(内部)</h2>
    <ol class="breadcrumb">
        <li class="active">管线档案</li>
        <li class="active">档案录入</li>
        <li>案卷录入</li>
    </ol>
    <div style="clear:both;"></div>
</section>



