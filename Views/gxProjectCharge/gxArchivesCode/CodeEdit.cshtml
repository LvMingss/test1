<script type="text/javascript">
    var q = function (value, data, cell, row, options) { //plain text value
        return "<i class='fa fa-edit' style='color:#428bca;vertical-align:middle; padding:2px 0;'></i>"
    };
    $().ready(function () {//在页面加载完成之后用，为了保证js能完整的执行。
        $(document).ready(function () {
            var a = $(window).height();
            var hh = a-160;
            $(".box-h").height(hh)  // 高度加在类名为box的DIV 上

        })
            $("#example-table-2").tabulator({
                height: "100%",
                colMinWidth:100,
                fitColumns:true,
                sortable: false,
                selectable:true, //make rows selectable
                pagination:"local",
                paginationSize:50,
                columns: [
                    {
                    title: "编号修改", field: "q", width: 100 ,formatter: q, sorter: "string", align: "center", onClick: function (e, val, cell, row) {
                        var url = '/gxArchivesCode/Coding?id=' + row.r;
                        window.location.href = url;
                        //alert('对不起，您没有权限进行编号修改！');
                    }
                },
                { title: "工程名称", field: "a", width: 200 },
                { title: "工程序号", field: "b", width: 100 },
                { title: "工程顺序号", field: "c", width: 100 },
                { title: "档号范围", field: "d", width: 200 },
                { title: "总登记号范围", field: "e", width: 200 },
                { title: "起始排架号", field: "f", width: 100 },
                { title: "总卷数", field: "g", width: 100 },
                { title: "公分明细数", field: "h", width: 100 },
                { title: "建设单位", field: "i", width: 200 },
                { title: "设计单位", field: "j", width: 200 },
                { title: "施工单位", field: "k", width: 200 },
                { title: "总厚度", field: "l", width: 100 },
                { title: "整理人", field: "m", width: 100 },
                { title: "接收人", field: "n", width: 100 },
                { title: "接受日期", field: "o", width: 100 },
                { title: "领取日期", field: "p"},



                ],
            });

            var temp = new Array();
            var data=@(new HtmlString(@ViewBag.result));
            for (var i = 0; i < data.length;i++) {
                var a = data[i].dateReceived
                date = a
                if(a!=null){
                    var date = a.slice(0,10)
                }
                var b = data[i].lqDate
                date1 = b
                if(b!=null){
                    var date1 =b.slice(0,10)
                }
                var d = data[i].startArchiveNo+"—"+data[i].endArchiveNo
                var e = data[i].startRegisNo+"—"+data[i].endRegisNo

                temp.push({ "id": i + 1, "a": data[i].projectName, "b": data[i].projectNo, "c": data[i].paperProjectSeqNo, "d": d,"e": e,"f":data[i].startPaijiaNo,"g": data[i].archivesCount, "h":data[i].InchCountDetail, "i":data[i].developmentOrganization, "j": data[i].disignOrganization,"k": data[i].constructionOrganization,"l": data[i].originalInchCount,"m": data[i].collator,"n": data[i].recipient,"o":date,"p":date1,"r": data[i].projectID});
            }

            $("#example-table-2").tabulator("setData", temp);
            $(window).resize(function () {
                var a = $(window).height();
                var hh = a-160;
                $(".box-h").height(hh)  // 高度加在类名为box的DIV 上
                $("#example-table-2").tabulator("redraw",true);

            });
        });
</script>

