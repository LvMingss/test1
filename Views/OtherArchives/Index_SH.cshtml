<script>
    function del() {
        var msg = "确认要删除吗?";
        if (confirm(msg) == true) {
            return true;
        } else {
            return false;
        }
    }
    function rk() {
        var msg = "确认完成入库?";
        if (confirm(msg) == true) {
            return true;
        } else {
            return false;
        }
    }
    function ifok(){
        var msg = "确定取消编号？";
        if (confirm(msg) == true) {
            return true;
        } else {
            return false;
        }
    }
</script>
