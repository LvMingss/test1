                if(b!=null){
                    var date =b.split("-");
                    var day=date[2].substring(0,2);
                    var result = date[0]+'-'+date[1]+'-'+day;
                }

                temp.push({ "id": i + 1,  "g":data[i].ID, "2": data[i].userID, "3": result ,"a": data[i].ImageAddress,
