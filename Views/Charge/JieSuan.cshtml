        <table class="table table-bordered table-striped" style="background-color:#f9f9f9;">
            <tr >
                <th style="background-color:darkGray">
                    收费科室
                </th>
                <th style="background-color:darkGray">
                    收费事项
                </th>
                <th style="background-color:darkGray">
                    收费日期
                </th>
                <th style="background-color:darkGray">
                    收费金额
                </th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.itemName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.chargeTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.totalExpense)
                    </td>

                </tr>
            }
        </table>
        @*<hr />
        <td>
            合计金额：<input type="text" id="total" name="totle" readonly="readonly" value="@ViewBag.total" class="form-control">
        </td>
        <br>*@
    <div style="text-align:center;">
        <input type="submit" name="action" id="ok" value="确认收费" class="btn btn-default">
        <input type="submit" name="action" id="dayin" value="打印" class="btn btn-default">
        <input type="submit" name="action" id="back" value="驳回" class="btn btn-default">
        <input type="button" name="action" id="returm" onclick="click_c()" value="返回" class="btn btn-default">
        <div style="height:20px;"></div>
    </div>
        
        }




