<script type="text/javascript">
    var o = function (value, data, cell, row, options) { //plain text value
        return "<i class='fa fa-edit' style='color:#428bca;vertical-align:middle; padding:2px 0;'></i>"
        };



    $().ready(function () {//在页面加载完成之后用，为了保证js能完整的执行。
        $(document).ready(function () {

            var a = $(window).height();
            var hh = a-160;
            $(".box-h").height(hh)  // 高度加在类名为box的DIV 上

        })
            $("#example-table-2").tabulator({
                height:"100%",
                virtualDom:false,
                selectable: true,
                fitColumns:true,
                pagination:"local",
                paginationSize:50,
                rowFormatter:function(row){
                    //row - row component
                    
                    var data = row.getData();
                    if(data.g==false||data.g==null){                    
                        row.getElement().css({"background-color":"#99FF00","border-bottom":"1px solid #999"});
                    }
                    
                },
                

                columns: [
                { title: "费用修改", field: "o", width: 80,headerSort: false,formatter: o, align: "center", cellClick: function (e,cell) {
                    var url = '/Charge/HeJuFeiYongEdit?id=' + cell.getValue();
                    window.location.href = url;  }
                },
                { title: "科室", field: "a", headerSort: false,width: 80 },
                { title: "收费编号", field: "b", headerSort: false,width: 100 },
                { title: "金额", field: "c", headerSort: false,width:80 },
                { title: "收费事项", field: "d", headerSort: false,width: 180 },
                { title: "缴费单位/缴费人", field: "e", headerSort: false,width: 400, },
                { title: "收费类别", field: "f", headerSort: false,width: 100 },
                { title: "是否缴费", field: "g", headerSort: false,width: 80 ,align: "center",formatter:"tickCross"},
                { title: "是否驳回", field: "i", headerSort: false,width: 80 ,align: "center",formatter:"tickCross" },
                { title: "驳回原因", field: "j", headerSort: false,width: 150 },
                { title: "收费日期", field: "h", headerSort: false,minWidth: 100 },




                ],

            });
            $("#download-xlsx").click(function(){
                $("#example-table-2").tabulator("download", "xlsx", "data.xlsx");
            });
            var temp = new Array();
            @*var data=@Html.Raw(Json.Encode(Model));*@
            var data=@(new HtmlString(@ViewBag.result));

            for (var i = 0; i < data.length;i++) {
                var b = data[i].chargeTime
                if(b!=null){
                    var result =b.slice(0,10)
                }
                temp.push({ "id": i + 1, "a": data[i].text, "b": data[i].seqNo, "c": data[i].totalExpense, "d": data[i].itemName,"e": data[i].unitName,"f": data[i].chargeType, "g": data[i].isCharge, "h":result , "i": data[i].isBack, "j": data[i].backNote, "o": data[i].searchNo
                });
            }

            $("#example-table-2").tabulator("setData", temp);

            $(window).resize(function () {
                var a = $(window).height();
                var hh = a-160;
                $(".box-h").height(hh)  // 高度加在类名为box的DIV 上
                $("#example-table-2").tabulator("redraw",true);
               
                    



            });

        });
</script>
