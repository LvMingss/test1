<script>
    $().ready(function () {//在页面加载完成之后用，为了保证js能完整的执行。
        id = "@ViewBag.id";
        str = "@ViewBag.result";
        var result = str.split(";");
        str1 = "";
        for (i = 0; i < result.length - 1 ; i++) {
            var namelist = result[i].split("/");
            var name = namelist[namelist.length - 1];
            str1 = str1 + "<li><img data-original=" + '"' + result[i] + '"  ' + "src=" + '"' + result[i] + '"  ' + "alt=" + '"' + name + '"' + "/>" + '<p align="center"><a href="/VideoCassetteLists/DownLoadFile?id=' + id + "&&filename=" + name + '" >' + name + '</a></p></li>"';
            //str1=str1+'<p><a href="' + result[i] + '" download>' +name + '</a></p>';
        }
        //$("#dowebok").append(str1);
        $(str1).appendTo("#dowebok");
        var viewer = new Viewer(document.getElementById('dowebok'), {
            url: 'data-original'
        });
    })
</script>
