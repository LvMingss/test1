<style>
    .navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus{
        color:#555;
    }
</style>
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" ,@style="padding:15px 0px;"}))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right" style="height:40px;">
        <li style="border-radius:15px;background-color:#333;">                 
            <a class="dropdown-toggle" href="#" data-toggle="dropdown"style="height:40px;padding:5px 0px 5px 15px;">
                <div style="border-right:groove;padding-right:15px;">
                    <span class="glyphicon glyphicon-user padding-right-small" style="top: 3px; position: relative;"></span> @(User.Identity.GetUserName())
                    <i class="fa fa-caret-down"></i>
                </div>
            </a>            
            <ul class="dropdown-menu nav-list" >
                <li><a href="/Manage/Index" target="mainFrame"><span class="fa fa-caret-right" style="padding-left:30px;"></span> 个人信息</a></li>
                <li><a href="/Manage\ChangePassword" target="mainFrame"><span class="fa fa-caret-right" style="padding-left:30px;"></span> 更改密码</a></li>
                
            </ul>   
        </li>        
        <li style="border-radius:15px;background-color:#333;">
            <a href="javascript:document.getElementById('logoutForm').submit()"style="height:40px;padding:5px 15px;"><span class="fa fa-fw fa-power-off" ></span> 注销</a>
        </li>
    </ul>
        }
}
    else
    {
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("注册", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li style="border-radius:15px;">@Html.ActionLink("登录", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
    }
