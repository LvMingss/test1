@model IEnumerable<urban_archive.Models.vw_projectList>
@*@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />*@
@*<link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />*@
<link href="~/Content/Tabulator/version3.0/tabulator.css" rel="stylesheet" />
@{
    ViewBag.Title = "PaperSettle";
}
<script src="~/Scripts/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Content/Tabulator/version3.0/tabulator.js"></script>
<script type="text/javascript">

    var l = function (value, data, cell, row, options) { //plain text value
        return "<i class='fa fa-edit' style='color:#428bca;vertical-align:middle; padding:2px 0;'></i>"
    };
    $().ready(function () {//在页面加载完成之后用，为了保证js能完整的执行。
        $(document).ready(function () {
            var a = $(window).height();
            var hh = a-160;
            $(".box-h").height(hh)  // 高度加在类名为box的DIV 上

        })
            $("#example-table-2").tabulator({
                height:"100%",
                virtualDom:false,
                
                
                //minWidth
                fitColumns:true,                
                selectable:true, //make rows selectable
                pagination:"local",
                paginationSize:50,
                columns: [
                {
                    title: "等待编号", field: "l", width: 70 ,formatter: l, headerSort: false, align: "center", cellClick: function (e,cell) {
                        var url = '/PaperSettle/Createinformationzhengli?id=' + cell.getValue();
                        window.location.href = url;
                    }
                },
                { title: "工程名称", field: "a",headerSort: false, width: 200 },
                { title: "工程序号", field: "b", headerSort: false,width: 100 },
                { title: "建设单位", field: "c",headerSort: false, width: 200 },
                { title: "公分明细数", field: "d",headerSort: false, width: 200 },
                { title: "整理人", field: "e",headerSort: false, width: 60 },
                { title: "总卷数", field: "f", headerSort: false,width: 60 },
                { title: "总厚度", field: "g",headerSort: false, width: 60 },
                { title: "施工单位", field: "h",headerSort: false, width: 200 },
                { title: "领取日期", field: "i", headerSort: false,width: 100 },
                { title: "接收人", field: "j", headerSort: false,width: 100 },
                { title: "接受日期", field: "k",headerSort: false,minWidth:100},


                ],
            });

            var temp = new Array();
            var data=@(new HtmlString(@ViewBag.result));
            for (var i = 0; i < data.length;i++) {
                var a = data[i].lqDate
                //var result=a
                if(a!=null){
                    var result = a.slice(0,10)
                }
                var b = data[i].dateArchive
                //var result1=b
                if(b!=null){
                    var result1 = b.slice(0,10)
                }

                temp.push({ "id": i + 1, "a": data[i].projectName, "b": data[i].projectNo, "c": data[i].developmentOrganization, "d": data[i].InchCountDetail,"e": data[i].collator,"f":data[i].archivesCount,"g": data[i].originalInchCount, "h": data[i].constructionOrganization, "i": result, "j": data[i].recipient,"k":result1,"l": data[i].projectID});
            }

            $("#example-table-2").tabulator("setData", temp);
            $(window).resize(function () {
                var a = $(window).height();
                var hh = a-160;
                $(".box-h").height(hh)  // 高度加在类名为box的DIV 上
                $("#example-table-2").tabulator("redraw",true);
            });

        });
</script>
<section>
    <h2 style="float:left;"><i class="fa fa-tags kongge"></i>等待编号</h2>
    <ol class="breadcrumb">
        <li class="active">竣工档案</li>
        <li class="active">档案整理</li>
        <li>等待编号</li>
    </ol>
    <div style="clear:both;"></div>
</section>

@using (Html.BeginForm("waitcode", "PaperSettle", FormMethod.Get))
{
        <p>
                检索条件:@Html.DropDownList("SelectedID", null, new { @class = "form-control", @style = "display:inline" })  检索内容:@Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @style = "display:inline" })
                <input type="submit" value="查找" class="btn btn-default" />
        </p>
}
<div id="example-table-2" class="box-h"> </div>





