@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @*<p>
            类别 : @Html.DropDownList("SelectedID")
            <input type="submit" value="查找" />
        </p>*@

    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div>
        <table class="table table-bordered dl-horizontal" style="width:600px;text-align:center;margin:0 auto;border:1px solid #408cca;margin-top:50px;background:#fff;">
            <tr class="linear">
                <td colspan="2" style="color:white;font-size:18px;">
                    创建新帐户
                </td>
            </tr>
            <tr>
                <td>
                    用户名
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", @style = "display:inline" })
                </td>
            </tr>
            <tr>
                <td>
                    科室
                </td>
                <td>
                    @Html.DropDownList("DepartmentID", null, new { @class = "form-control", @style = "display:inline" } )
                </td>
            </tr>
            <tr>
                <td>
                    职位
                </td>
                <td>
                    @Html.DropDownList("RoleID", null, new { @class = "form-control", @style = "display:inline" })
                </td>
            </tr>
            <tr>
                <td>
                    电子邮箱
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @style = "display:inline" })
                </td>
            </tr>
            <tr>
                <td>
                    密码
                </td>
                <td>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "display:inline" })
                </td>
            </tr>
            <tr>
                <td>
                    确认密码
                </td>
                <td>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "display:inline" })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" class="btn btn-default" value="注册" />
                </td>

            </tr>
        </table>
    </div>
    
            
            
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
