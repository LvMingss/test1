@model urban_archive.Models.bookInfo
     
@{
    ViewBag.Title = "借阅/归还";
}
<style type="text/css">
    .jubu {
        max-width: 100%;
    }
</style>
<script>
    function jie() {
        var msg = "确认要借阅该图书吗?";
        if (confirm(msg) == true) {
            return true;
        } else {
            return false;
        }
    }
    function huan() {
        var msg = "确认要归还该图书吗?";
        if (confirm(msg) == true) {
            return true;
        } else {
            return false;
        }
    }
    </script>
