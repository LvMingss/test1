<hr />
<div class="file-preview">
    <div id="dowebok">
        <div style="float:left;padding:20px;">
                <div id="myplayer"></div>

            </div>
        <div style="clear:both"></div>

    </div>
    <div style="clear:both"></div>

</div>
<script type='text/javascript'>
    str = "@ViewBag.result";
    var result = str.split(";");
    for (i = 0; i < result.length - 1 ; i++) {
        var fileurl = result[i] ;
        var namelist = result[i].split("/");
        var name = namelist[namelist.length - 1];
        var id = 'myplayer' + (i + 1);
        str1 = '<div style="float:left;padding:20px;"><div id="myplayer' + (i + 1) + '"></div>';
        str2 = str1 + '<p>' + name + '</p> </div>';
        $("#dowebok").append(str2);
        jwplayer(id).setup({
            file: fileurl,
            width: '320',
            height: '240'
        });
    }

</script>

